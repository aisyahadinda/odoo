<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="latihan_address_form" model="ir.ui.view">
            <field name="name">latihan.address.form</field>
            <field name="model">latihan.address</field>
            <field name="arch" type="xml">
                <form string="Alamat">
                    <sheet>
                        <group>
                            <field name="street" string="Jalan"/>
                            <field name="city" string="Kota"/>
                            <field name="state" string="Provinsi"/>
                            <field name="zip" string="Kode Pos"/>
                            <field name="country_id" string="Negara"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Tree View -->
        <record id="latihan_address_tree" model="ir.ui.view">
            <field name="name">latihan.address.tree</field>
            <field name="model">latihan.address</field>
            <field name="arch" type="xml">
                <tree string="Alamat">
                    <field name="street" string="Jalan"/>
                    <field name="city" string="Kota"/>
                    <field name="state" string="Provinsi"/>
                    <field name="zip" string="Kode Pos"/>
                    <field name="country_id" string="Negara"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="latihan_address_action" model="ir.actions.act_window">
            <field name="name">Alamat</field>
            <field name="res_model">latihan.address</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
