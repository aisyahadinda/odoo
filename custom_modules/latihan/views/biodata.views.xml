<odoo>
    <data>
        <!-- Form View -->
        <record id="latihan_biodata_form" model="ir.ui.view">
            <field name="name">latihan.biodata.form</field>
            <field name="model">latihan.biodata</field>
            <field name="arch" type="xml">
                <form string="Biodata">
                    <sheet>
                        <group>
                            <field name="name" string="Nama"/>
                            <field name="fullname" string="Nama Lengkap"/>
                            <field name="birth_date" string="Tanggal Lahir"/>
                            <field name="age" string="Umur"/>
                            <field name="children" string="Anak"/>
                            <field name="photo" string="Foto" widget="image" class="oe_avatar"/>
                            <field name="gender" string="Jenis Kelamin"/>
                            <field name="religion" string="Agama"/>
                            <field name="birth_city" string="Kota Lahir"/>
                        </group>
                        <group string="Alamat">
                            <field name="address_ids">
                                <tree string="Alamat">
                                    <field name="street" string="Jalan"/>
                                    <field name="city" string="Kota"/>
                                    <field name="state" string="Provinsi"/>
                                    <field name="zip" string="Kode Pos"/>
                                    <field name="country_id" string="Negara"/>
                                </tree>
                            </field>
                        </group>
                        <group string="Pendidikan">
                            <label for="education_ids"/>
                            <div>
                                <field name="education_ids" widget="many2many_tags"/>
                            </div>
                        </group>
                        <footer>
                            <button string="Hitung Umur" type="object" name="calculate_age" class="oe_highlight"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
 
        <!-- Tree View -->
        <record id="latihan_biodata_tree" model="ir.ui.view">
            <field name="name">latihan.biodata.tree</field>
            <field name="model">latihan.biodata</field>
            <field name="arch" type="xml">
                <tree string="Biodata">
                    <field name="name" string="Nama" optional="show"/>
                    <field name="fullname" string="Nama Lengkap" optional="show"/>
                    <field name="birth_date" string="Tanggal Lahir" optional="show"/>
                    <field name="age" string="Umur" optional="show"/>
                    <field name="children" string="Anak" optional="show"/>
                    <field name="photo" string="Foto" widget="image" class="oe_avatar"/>
                    <field name="gender" string="Jenis Kelamin" optional="show"/>
                    <field name="religion" string="Agama" optional="show"/> 
                    <field name="birth_city" string="Kota Lahir" optional="show"/>
                    <field name="address_ids" string="Alamat" optional="show">
                        <tree>
                            <field name="street" string="Jalan"/>
                            <field name="city" string="Kota"/>
                            <field name="state" string="Provinsi"/>
                            <field name="zip" string="Kode Pos"/>
                            <field name="country_id" string="Negara"/>
                        </tree>
                    </field>
                    <field name="education_ids" widget="many2many_tags" string="Pendidikan"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="latihan_biodata_action" model="ir.actions.act_window">
            <field name="name">Biodata</field>
            <field name="res_model">latihan.biodata</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
